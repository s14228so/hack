<%= form_for idea do |f| %>
  <%= f.label :タイトル %>
  <%= f.text_field :title, class: "input is-primary"%><br>

  <%= f.label :本文 %>
  <div class="field">
    <div class="control">
      <%= f.text_area :body, class: "textarea is-info"%><br>
    </div>
  </div>
  <div class="file is-boxed">
    <label class="file-label">
      <span class="file-cta">
      <span class="file-icon">
        <i class="fas fa-upload"></i>
      </span>
      <span class="file-label">
        Choose a file…
        <label for="file" class="file">
          <%= f.file_field :image %>
          </label>
      </span>
    </span>
    </label>
  </div>
  <br>
  <%= f.submit :投稿, class: "button is-primary"%>
<% end %>
<hr>

